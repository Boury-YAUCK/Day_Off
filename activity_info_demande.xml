<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoDemandeActivity">

    <TextView
        android:id="@+id/cni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:text="Cni"
        android:layout_below="@+id/imgdemande1"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp" />

    <EditText
        android:id="@+id/butcni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:imeOptions="actionNext"
        android:layout_below="@+id/imgdemande1"
        android:layout_marginLeft="170dp"
        android:inputType="number"
        android:hint=""
        tools:ignore="TextViewEdits"
        android:layout_marginStart="170dp" />

    <TextView
        android:id="@+id/nom"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cni"
        android:layout_marginTop="20sp"
        android:text="Prenom et Nom"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp" />

    <EditText
        android:id="@+id/butnom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionNext"
        android:layout_below="@+id/butcni"
        android:layout_marginLeft="170sp"
        android:inputType="text"
        tools:ignore="TextViewEdits"
        android:layout_marginStart="170sp" />


    <TextView
        android:id="@+id/dtedmande"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nom"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="10dp"
        android:text="Date demande"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp" />

    <EditText
        android:id="@+id/butdtedmande"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/butnom"
        android:imeOptions="actionNext"
        android:layout_marginLeft="170sp"
        android:inputType="date"
        tools:ignore="TextViewEdits"
        android:layout_marginStart="170sp" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dtedmande"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="10dp"
        android:text="Type de congÃ©"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp" />

    <Spinner
        android:id="@+id/buttype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/butdtedmande"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="170sp"
        android:imeOptions="actionNext"
        android:inputType="text"
        tools:ignore="TextViewEdits"
        android:layout_marginStart="170sp" />

    <TextView
        android:id="@+id/depart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/type"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="10dp"
        android:text="Date de depart"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp" />

    <EditText
        android:id="@+id/butdepart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttype"
        android:layout_marginLeft="170sp"
        android:imeOptions="actionNext"
        android:inputType="date"
        tools:ignore="TextViewEdits"
        android:layout_marginStart="170sp" />

    <TextView
        android:id="@+id/retour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/depart"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20sp"
        android:text="Date de retour"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/butretour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/butdepart"
        android:layout_marginStart="170sp"
        android:layout_marginLeft="170sp"
        android:imeOptions="actionNext"
        android:inputType="date"
        tools:ignore="TextViewEdits" />

    <TextView
        android:id="@+id/nbrjr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/retour"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="10dp"
        android:text="Nbr de jour"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp" />

    <EditText
        android:id="@+id/butnbrjr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/butretour"
        android:layout_marginLeft="170sp"
        android:imeOptions="actionDone"
        android:inputType="number"
        tools:ignore="TextViewEdits"
        android:layout_marginStart="170sp" />

    <Button
        android:id="@+id/butvalider"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nbrjr"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="20sp"
        android:background="@drawable/gradient"
        android:gravity="center"
        android:text="Modifier"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/butsupprimer"
        android:layout_width="174dp"
        android:layout_height="68dp"
        android:layout_below="@+id/butvalider"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="39dp"
        android:layout_marginRight="20sp"
        android:background="@drawable/gradient"
        android:gravity="center"
        android:text="Supprimer"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>