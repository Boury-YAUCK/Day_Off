<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".UtilisateurActivity">

    <ImageView
        android:id="@+id/ajoutuser"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:background="@drawable/add_user"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:padding="2dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/modifieruser"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_below="@+id/ajoutuser"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="22dp"
        android:background="@drawable/modifier_user"
        android:foregroundGravity="right"
        android:padding="0dp"
        tools:ignore="MissingConstraints"
        android:layout_alignParentRight="true"
        android:layout_marginRight="22dp" />

    <ImageView
        android:id="@+id/supprimerUser"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:gravity="center"
        android:padding="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/modifieruser"
        android:background="@drawable/sup_user"
        tools:ignore="MissingConstraints" />

</RelativeLayout>