<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nouvelemploye"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/gradient"
            android:text="Nouvel employé"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:gravity="center_horizontal" />



        <TextView
            android:id="@+id/infopers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Informations_personnelles"
            android:textColor="@android:color/holo_red_light"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="42dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp" />



        <EditText
            android:id="@+id/butnom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="Nom"
            android:imeOptions="actionNext"
            tools:ignore="TextViewEdits"
            />


        <EditText
            android:id="@+id/butmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="Email"
            android:imeOptions="actionNext"
            tools:ignore="TextViewEdits"
            />


        <EditText
            android:id="@+id/butcni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CNI"
            android:autofillHints=""
            android:imeOptions="actionNext"
            tools:ignore="TextViewEdits"
            android:inputType="" />

        <TextView
            android:id="@+id/sexe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="10dp"
            android:text="Sexe"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_marginStart="10dp" />

        <RadioGroup
            android:id="@+id/radiosexe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="-19dp"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/buthomme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Homme"
                android:checked="true" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buthomme"
                android:text="Femme"/>
        </RadioGroup>


        <TextView
            android:id="@+id/matrimonial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="4dp"
            android:text="Sit_matrimoniale"

            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_marginStart="10dp" />

        <RadioGroup
            android:id="@+id/radiomatri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/butcelib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Celibataire"
                android:checked="true" />
            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/butcelib"
                android:text="Marié(e)"/>
        </RadioGroup>


        <EditText
            android:id="@+id/buttel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="Téléphone"
            android:imeOptions="actionNext"
            tools:ignore="TextViewEdits"
            />


        <EditText
            android:id="@+id/butadd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="Adresse"
            android:imeOptions="actionNext"
            tools:ignore="TextViewEdits"
            android:inputType="text" />


        <EditText
            android:id="@+id/butnaiss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date de Naissance"
            android:autofillHints=""
            android:imeOptions="actionNext"
            tools:ignore="TextViewEdits"
            android:inputType="date" />

        <TextView
            android:id="@+id/poste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Poste"
            android:textColor="@android:color/holo_red_light"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="42dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp" />


        <EditText
            android:id="@+id/butdepartema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="Département"
            tools:ignore="TextViewEdits"
            android:inputType="text" />


        <EditText
            android:id="@+id/butfonction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="Fonction"
            android:imeOptions="actionNext"
            tools:ignore="TextViewEdits"
            android:inputType="text" />


        <EditText
            android:id="@+id/buttypcontrat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:hint="Type de contrat"
            android:autofillHints=""
            tools:ignore="TextViewEdits"
            android:inputType="text" />


        <EditText
            android:id="@+id/butentre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="Date d'entrée"
            android:imeOptions="actionNext"
            tools:ignore="TextViewEdits"
            android:inputType="date" />


        <EditText
            android:id="@+id/butidentifiant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="Identifiant"
            android:imeOptions="actionNext"
            tools:ignore="TextViewEdits"
            android:inputType="text" />


        <EditText
            android:id="@+id/butpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="password"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            tools:ignore="LabelFor,TextViewEdits"
            />


        <EditText
            android:id="@+id/butpassword2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="Confirmer password"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            tools:ignore="TextViewEdits"
            />

        <Button
            android:id="@+id/btnajouter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajouter"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="40dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:background="@drawable/gradient"/>


    </LinearLayout>

</ScrollView>